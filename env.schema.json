{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Variables",
  "description": "The environment variables schema for the Safe Places server",
  "type": "object",
  "properties": {
    "JWT_SECRET": {
      "type": "string"
    },
    "EXPRESS_PORT": {
      "type": "integer"
    },
    "DB_HOST": {
      "type": "string"
    },
    "DB_PASS": {
      "type": "string"
    },
    "DB_USER": {
      "type": "string"
    },
    "DB_NAME": {
      "type": "string"
    },
    "DB_HOST_PUB": {
      "type": "string"
    },
    "DB_PASS_PUB": {
      "type": "string"
    },
    "DB_USER_PUB": {
      "type": "string"
    },
    "DB_NAME_PUB": {
      "type": "string"
    },
    "JWT_EXP": {
      "type": "integer"
    },
    "DISPLAY_ERROR_MESSAGE": {
      "type": "integer"
    }
  },
  "required": [
    "JWT_SECRET",
    "PORT",
    "DB_HOST",
    "DB_PASS",
    "DB_USER",
    "DB_NAME",
    "DB_HOST_PUB",
    "DB_PASS_PUB",
    "DB_USER_PUB",
    "DB_NAME_PUB",
    "JWT_EXP"
  ]
}
